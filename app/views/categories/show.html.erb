<div class="container-fluid category-page">
  <div class="voted-articles">
  <% @category.articles.order(created_at: :desc).each do |art| %>
    <article class="featured-article article">
      <img class="img-responsive" src="https://www.usanetwork.com/sites/usanetwork/files/2019/07/Suits_S9-KeyArt-Show-Tile-1920x1080.jpg" alt="suits image" />
      <div class="information">
        <span class="cat"><%= @category.name%> </span> 
        <h4 class="title">
          <%= art.title %>
        </h4>
        <p class="description">
          <%= art.text %>
        </p>
        <div class="votes-wrapper">
          <% voted = art.user_voted?(current_user.id)%>
          <%= link_to voted ?unvotearticle_path(art.id,@category.id):votearticle_path(art.id,@category.id), class:'vote-btn' do %>
            <%= image_tag voted ?'clapping_filled.png':'clapping.png' %>
          <% end %>
          <span><%= art.vote_count if art.vote_count && art.vote_count > 0 %></span>
        </div>
        
      </div>
    </article>
    <% end %>
  </div>
</div>